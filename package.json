{
  "name": "epic-inline",
  "description": "Concise way to write runtime inline CSS styles.",
  "version": "0.0.0-development",
  "repository": "github:tobua/epic-inline",
  "homepage": "https://tobua.github.io/epic-inline",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "app": "bun create-app.js",
    "app:copy": "cpx '**/*.ts' app/node_modules/epic-inline --watch",
    "check": "biome check --write .",
    "types": "tsc"
  },
  "dependencies": {
    "@types/color-convert": "^2.0.4",
    "@types/parse-color": "^1.0.3",
    "@types/simple-swizzle": "^0.2.2",
    "color-convert": "^2.0.1",
    "parse-color": "^1.0.0",
    "simple-swizzle": "^0.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@npmcli/arborist": "^9.0.0",
    "@types/bun": "^1.1.16",
    "@types/react": "^19.0.4",
    "@types/react-test-renderer": "^19.0.0",
    "cpx": "^1.5.0",
    "npm-packlist": "^10.0.0",
    "padua": "^4.0.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-test-renderer": "18.3.1",
    "typescript": "^5.7.3",
    "zero-configuration": "^0.17.6"
  },
  "trustedDependencies": [
    "zero-configuration"
  ],
  "type": "module",
  "sideEffects": true,
  "main": "./index.ts",
  "exports": {
    ".": "./index.ts",
    "./register-react": {
      "default": "./register-react.ts"
    }
  },
  "files": [
    "*.ts"
  ],
  "keywords": [
    "style",
    "inline",
    "css",
    "react",
    "inline-styles"
  ],
  "publishConfig": {
    "provenance": true
  },
  "configuration": {
    "gitignore": [
      "extends:recommended",
      "InlineApp",
      "app/**/*",
      "!app/App.tsx"
    ],
    "vscode": "biome",
    "biome": {
      "extends": "recommended",
      "linter": {
        "rules": {
          "performance": {
            "useTopLevelRegex": "off"
          }
        }
      },
      "files": {
        "ignore": [
          "documentation",
          "native",
          "create-native-app.js",
          "app"
        ]
      }
    },
    "typescript": [
      {
        "extends": "plugin",
        "files": [
          "index.ts",
          "register-react.ts"
        ]
      },
      {
        "extends": "plugin",
        "folder": "test",
        "compilerOptions": {
          "strict": false,
          "jsx": "react-jsx"
        }
      }
    ]
  }
}
