{
  "name": "epic-inline",
  "description": "Concise way to write runtime inline CSS styles.",
  "version": "0.0.0-development",
  "repository": "github:tobua/epic-inline",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "app": "node create-native-app.js",
    "app:copy": "cpx 'dist/**/*' app/node_modules/epic-inline/dist --watch",
    "build": "padua build",
    "start": "padua watch",
    "test": "vitest run"
  },
  "padua": {
    "entry": [
      "index.ts",
      "register-react.ts"
    ],
    "esbuild": {
      "external": [
        "epic-inline",
        "react"
      ]
    }
  },
  "dependencies": {
    "color-convert": "^2.0.1",
    "color-string": "^1.9.1",
    "parse-color": "^1.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.1",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.21",
    "cpx": "^1.5.0",
    "happy-dom": "^10.10.4",
    "padua": "^2.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vitest": "^0.34.2"
  },
  "type": "module",
  "sideEffects": true,
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./register-react": {
      "default": {
        "types": "./dist/register-react.d.ts",
        "default": "./dist/register-react.js"
      }
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "style",
    "inline",
    "css",
    "react",
    "inline-styles"
  ],
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs"
  },
  "publishConfig": {
    "provenance": true
  },
  "engines": {
    "node": ">= 16"
  }
}
