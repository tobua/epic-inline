{
  "name": "epic-inline",
  "description": "Concise way to write runtime inline CSS styles.",
  "version": "0.0.0-development",
  "repository": "github:tobua/epic-inline",
  "homepage": "https://tobua.github.io/epic-inline",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "app": "bun create-native-app.js",
    "app:copy": "cpx 'dist/**/*' app/node_modules/epic-inline/dist --watch",
    "build": "padua build"
  },
  "padua": {
    "entry": [
      "index.ts",
      "register-react.ts"
    ],
    "esbuild": {
      "external": [
        "epic-inline",
        "react"
      ]
    },
    "tsconfig": {
      "compilerOptions": {
        "paths": {
          "epic-inline": [
            "."
          ]
        }
      }
    }
  },
  "dependencies": {
    "color-convert": "^2.0.1",
    "color-string": "^1.9.1",
    "parse-color": "^1.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.6",
    "@types/react": "^18.3.3",
    "@types/react-test-renderer": "^18.3.0",
    "cpx": "^1.5.0",
    "padua": "^4.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-test-renderer": "^18.3.1"
  },
  "trustedDependencies": [
    "padua"
  ],
  "type": "module",
  "sideEffects": true,
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./register-react": {
      "default": {
        "types": "./dist/register-react.d.ts",
        "default": "./dist/register-react.js"
      }
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "style",
    "inline",
    "css",
    "react",
    "inline-styles"
  ],
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs"
  },
  "publishConfig": {
    "provenance": true
  },
  "engines": {
    "node": ">= 18"
  }
}
