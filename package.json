{
  "name": "epic-inline",
  "description": "Concise way to write runtime inline CSS styles.",
  "version": "0.0.0-development",
  "repository": "github:tobua/epic-inline",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "build": "padua build",
    "start": "padua watch",
    "test": "vitest run"
  },
  "padua": {
    "entry": [
      "index.ts",
      "register-react.ts"
    ],
    "esbuild": {
      "external": [
        "epic-inline",
        "react"
      ]
    }
  },
  "dependencies": {
    "color-convert": "^2.0.1",
    "color-string": "^1.9.1",
    "parse-color": "^1.0.0"
  },
  "type": "module",
  "sideEffects": true,
  "main": "dist/index.js",
  "exports": {
    ".": {
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./register-react": {
      "types": "./dist/register-react.d.ts",
      "default": "./dist/register-react.js"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "style",
    "inline",
    "css",
    "react",
    "inline-styles"
  ],
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.12",
    "happy-dom": "^9.20.3",
    "padua": "^1.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vitest": "^0.32.2"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs"
  },
  "engines": {
    "node": ">= 16"
  }
}
